@model Ecommerce.Models.KhachHang

@{
    ViewBag.Title = "Xóa Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-block">
    <h1 class="title"> Xóa Khách Hàng </h1>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.MatKhauKH)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MatKhauKH)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HoVaTen)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoVaTen)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.SDT)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </dt>

        @if (Model.GioiTinh == true)
        {
            <dd>
                Nam
            </dd>
        }
        else
        {
            <dd>
                Nữ
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.DiaChi)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DiaChi)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>

        @if (Model.TrangThai == 0)
        {
            <dd>
                Hoạt Động
            </dd>
        }
        else
        {
            <dd>
                Tạm Khóa
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary-outline">Xóa</button>  <a href="~/Admin/KhachHang/Index" class="btn btn-danger-outline">Trở Về</a>
            </div>
        </div>
    }
</div>

                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Nhân Viên</td>
                                    <td>@ViewBag.CountNhanVien</td>
                                    <td><a href="~/Admin/NhanVien/Index"><i class="fa fa-info-circle" aria-hidden="true"></i> Chi Tiết</a></td>

                                </tr>
